---
import LineLight from "./subComponents/LineLight.astro";
---

<section id="contact" class="w-full pb-[80px]  flex justify-center">
    <div class="w-11/12 flex flex-col max-md:items-center justify-center">
        <LineLight />
        <p class="text-lightBlue mt-[20px] font-[500] text-[2.6rem] max-sm:text-[2.2rem] max-ls:text-[2rem] font-Inter max-ls:text-center">Contate-nos agora:</p>
        <p class="text-[#B9DCED] mt-[10px] text-[4rem] max-lg:text-[3.8rem] max-md:text-[3.3rem] max-sm:text-[3rem] max-ls:text-[2.5rem] max-md:text-center font-[500] font-Jost">Transforme a maneira que suaempresa é vista com a 2Core!</p>

       
        <div class="bg-[url('/img/backgroundContact.jpg')] w-[1200px] max-xl:w-full rounded-[20px] bg-no-repeat bg-cover self-center mt-[20px] px-[20px] max-ls:px-[10px] py-[40px] max-md:py-[20px] flex max-md:flex-col  justify-between  border-2 border-solid border-white">
            <div class="w-[30%] max-md:w-full">
                 <p class="text-white text-[4rem] max-xl:text-[3.3rem] max-lg:text-[2.4rem]  max-md:text-center font-[500] font-Jost after:w-[70%] after:h-[4px] after:block after:bg-white max-md:after:hidden">Entre em contato:</p>

                 <p class="text-[#fff] mt-[40px] max-ls:mt-[10px] font-[300] text-[2.6rem] max-xl:text-[2.4rem] max-lg:text-[2rem] max-ls:text-[1.8rem] font-Inter">Nosso Email:</p>
                 <p class="text-[#fff] font-[500] text-[3.2rem] max-xl:text-[3rem] max-lg:text-[2.2rem] max-ls:text-[1.8rem] font-Inter">contato@2core.com.br</p>

                 <p class="text-[#fff] mt-[40px] max-ls:mt-[10px] font-[300] text-[2.6rem] max-xl:text-[2.4rem] max-lg:text-[2rem] max-ls:text-[1.8rem] font-Inter">Número de telefone:</p>
                 <p class="text-[#fff] font-[500] text-[3.2rem] max-xl:text-[3rem] max-lg:text-[2.2rem] max-ls:text-[1.8rem] font-Inter">(16)99412-0529 </p>

                 <p class="text-[#fff] mt-[40px] max-ls:mt-[10px] font-[300] text-[2.6rem] max-xl:text-[2.4rem] max-lg:text-[2rem] max-ls:text-[1.8rem] font-Inter">Endereço:</p>
                 <p class="text-[#fff] font-[500] text-[3.2rem] max-xl:text-[3rem] max-lg:text-[2.2rem] max-ls:text-[1.8rem] font-Inter">Rua Manif Elias Pedro 3618 -Franca, SP</p>
            </div>
            <div class="w-[60%] max-md:w-full  bg-lightBlue px-[20px] py-[20px] max-sm:px-[10px] max-sm:py-[10px] rounded-[2px] max-md:mt-[20px] shadow-[10px_10px_0px_rgba(96,96,96)]">
                <p class="text-black font-[500] text-[2.6rem] max-xl:text-[2.2rem] max-lg:text-[2rem] max-sm:text-[1.8rem] font-Inter">Escolha o tipo de serviço que deseja conversar:</p>
                <div class="flex justify-between mt-[15px] max-sm:mt-[0px] max-lg:flex-wrap">
                    <button id="typeEcommerce" class="max-lg:mt-[10px] items-center justify-center font-[300] text-[2.5rem] max-xl:text-[2rem] max-sm:text-[1.8rem] max-ls:text-[1.6rem] bg-primary bg-opacity-40 px-[20px] max-sm:px-[10px]  py-[10px] max-sm:py-[5px] rounded-[8px]  border-white border-solid">
                        E-commerce
                    </button>

                    <button id="typeHomePage" class="max-lg:mt-[10px] items-center justify-center font-[300] text-[2.5rem] max-xl:text-[2rem] max-sm:text-[1.8rem] max-ls:text-[1.6rem] bg-primary bg-opacity-40 px-[20px] max-sm:px-[10px] py-[10px] max-sm:py-[5px] rounded-[8px] mx-[5px]  border-white border-solid">
                        Home Pages
                    </button>

                    <button id="typeSoftwares" class="max-lg:mt-[10px] items-center justify-center font-[300] text-[2.5rem] max-xl:text-[2rem] max-sm:text-[1.8rem] max-ls:text-[1.6rem] bg-primary bg-opacity-40 px-[20px] max-sm:px-[10px]  py-[10px] max-sm:py-[5px] rounded-[8px]  border-white border-solid">
                        Softwares
                    </button>
                </div>

                <label class="flex border-2 relative w-[90%] max-ls:w-full max-md:w-[90%] h-[55px] max-md:h-[50px] max-sm:h-[45px] border-primary border-solid rounded-[50px] mt-[30px]">
                    <p class="absolute text-primary bg-lightBlue text-[1.8rem] max-sm:text-[1.6rem] font-[500] top-[-15px] left-[30px] px-[10px]">Nome</p>
                    <input class="rounded-[50px] w-full h-full bg-transparent px-[7px] max-sm:px-[2px] ml-[10px] text-[#737373] placeholder:text-[#737373] font-[500] text-[2.2rem] max-xl:text-[2rem] max-sm:text-[1.8rem] max-ls:text-[1.6rem] outline-none " placeholder="Digite seu nome:"/>  
                </label>

                <label class="flex border-2 relative w-[90%] max-ls:w-full max-md:w-[90%] h-[55px] max-md:h-[50px] max-sm:h-[45px] border-primary border-solid rounded-[50px] mt-[30px]">
                    <p class="absolute text-primary bg-lightBlue text-[1.8rem] max-sm:text-[1.6rem] font-[500] top-[-15px] left-[30px] px-[10px]">Email</p>
                    <input class="rounded-[50px] w-full h-full bg-transparent px-[7px] max-sm:px-[2px] ml-[10px] text-[#737373] placeholder:text-[#737373] font-[500] text-[2.2rem] max-xl:text-[2rem] max-sm:text-[1.8rem] max-ls:text-[1.6rem] outline-none " placeholder="Digite seu e-mail:"/>  
                </label>

                <label class="flex border-2 relative w-[90%] max-ls:w-full max-md:w-[90%] h-[170px] border-primary border-solid rounded-[30px]  mt-[30px]">
                    <p class="absolute text-primary bg-lightBlue text-[1.8rem] max-sm:text-[1.6rem] font-[500] top-[-15px] left-[30px] px-[10px]">Obs</p>
                    <textarea class="mt-[10px] w-full h-[150px] bg-transparent ml-[10px] text-[#737373] placeholder:text-[#737373] font-[500] text-[2.2rem] max-xl:text-[2rem] max-sm:text-[1.8rem] max-ls:text-[1.6rem] outline-none " placeholder="Conte-nos um pouco de sua ideia..."/>  
                </label>

                <div class="self-start justify-self-start">
                    <div class="group inline-flex mt-[20px] items-center">
                        <button class="group-hover:scale-110 flex justify-center items-center p-[5px] border-2 border-solid border-black rounded-[100%]">
                            <img src="/icons/iconArrowRight.svg" alt="flecha apontando pra direita" class="w-[30px]  h-[30px] max-sm:h-[25px]"/>
                        </button>
                        <p class="group-hover:scale-110 ml-[20px] text-primary font-[600] text-[2.2rem] max-sm:text-[2rem] font-Inter">Enviar</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script>
    const typeEcommerce = document.getElementById("typeEcommerce") as HTMLElement
    const typeHomePage = document.getElementById("typeHomePage")    as HTMLElement
    const typeSoftwares = document.getElementById("typeSoftwares") as HTMLElement

    typeEcommerce.addEventListener("click",() => {
        typeEcommerce.classList.add("bg-opacity-100")
        typeHomePage.classList.remove("bg-opacity-100")
        typeSoftwares.classList.remove("bg-opacity-100")

        typeEcommerce.classList.add("border-2")
        typeHomePage.classList.remove("border-2")
        typeSoftwares.classList.remove("border-2")
    })

    typeHomePage.addEventListener("click",() => {
        typeHomePage.classList.add("bg-opacity-100")
        typeEcommerce.classList.remove("bg-opacity-100")
        typeSoftwares.classList.remove("bg-opacity-100")

        typeHomePage.classList.add("border-2")
        typeEcommerce.classList.remove("border-2")
        typeSoftwares.classList.remove("border-2")
    })

    typeSoftwares.addEventListener("click",() => {
        typeSoftwares.classList.add("bg-opacity-100")
        typeHomePage.classList.remove("bg-opacity-100")
        typeEcommerce.classList.remove("bg-opacity-100")

        typeSoftwares.classList.add("border-2")
        typeHomePage.classList.remove("border-2")
        typeEcommerce.classList.remove("border-2")
    })
</script>